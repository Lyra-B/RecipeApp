<html>
<head>
  <title>My Amazing Category App</title>
</head>
<body>
  <nav id="sidebar">
    <h3>Categories</h3>
    <ul id="categories">
      <% @categories.each do |category|%>
        <li class="category"><%= link_to category.name, category_path(category) %></li>
      <% end %>
    </ul>
  </nav>
  <main>
    <h1>My Amazing Category <%= @category.name %></h1>
  </main>
</body>
</html>