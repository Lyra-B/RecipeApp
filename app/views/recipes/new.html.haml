= render :partial => 'shared/errors', :locals => {:model=> @recipe}

= form_for @recipe do |f|
  %fieldset
    = f.label :title
    = f.text_field :title


  = f.fields_for :recipe_ingredient do |i|
    = i.fields_for :ingredient do |k|
      %fieldset
        = k.label :ingredient
        = k.text_field :ingredient

  %fieldset
    = f.submit "Save"